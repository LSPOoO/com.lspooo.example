<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2.0dip">

    <LinearLayout
        android:id="@+id/ytx_single_tab_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tab_view_iv"
                android:layout_width="32.0dip"
                android:layout_height="28.0dip"
                android:layout_centerInParent="true"
                android:src="@drawable/tab_communication_icon_normal"/>

            <TextView
                android:id="@+id/unread_count"
                style="@style/UnreadCountTipsStyle"
                android:layout_alignRight="@id/tab_view_iv"
                android:layout_alignTop="@id/tab_view_iv"
                android:layout_marginRight="-10.0dip"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/unread_dot"
                style="@style/UnreadDotStyle"
                android:layout_alignRight="@id/tab_view_iv"
                android:layout_alignTop="@id/tab_view_iv"
                android:layout_marginRight="-3.0dip"
                android:layout_marginTop="1.0dip"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tab_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/base_color"
            android:textSize="12.0dip"
            android:text="设置"/>
    </LinearLayout>
</RelativeLayout>