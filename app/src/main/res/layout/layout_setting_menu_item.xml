<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/SmallerListItemHeight"
    android:background="@drawable/setting_item_bg"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_centerVertical="true">

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="@dimen/SmallMenuIconSize"
        android:layout_height="@dimen/SmallMenuIconSize"
        android:layout_marginLeft="@dimen/SmallPadding" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/SmallPadding">

        <TextView
            android:id="@+id/setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/BasicTextSize"
            android:textColor="#404040"/>

        <TextView
            android:id="@+id/setting_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/SmallTextSize"
            android:textColor="@color/base_text_light_color"
            android:layout_marginTop="@dimen/SmallerPadding"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckedTextView
            android:id="@+id/check_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:gravity="center"
            android:textColor="@color/base_text_light_color"
            android:textSize="@dimen/SmallTextSize"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

        <com.lspooo.plugin.common.view.SwitchButton
            android:id="@+id/setting_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SwitchButtonStyle"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>

