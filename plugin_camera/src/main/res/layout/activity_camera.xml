<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/permission_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera_permission_title"
            android:textColor="@color/white"
            android:textSize="@dimen/BiggestTextSize"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera_permission_tips"
            android:textColor="@color/base_text_dark_color"
            android:textSize="@dimen/SmallTextSize"
            android:layout_marginTop="@dimen/SmallPadding"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/HighPadding"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/camera_permission_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_camera_permission"
                android:textColor="@color/permission_text_color"
                android:textSize="@dimen/SmallTextSize" />

            <TextView
                android:id="@+id/microphone_permission_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_microphone_permission"
                android:textColor="@color/permission_text_color"
                android:textSize="@dimen/SmallTextSize"
                android:layout_marginTop="@dimen/LargerPadding"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
