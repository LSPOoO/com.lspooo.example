<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/NormalButtonHeight"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/divider"
        android:layout_width="@dimen/OneDPPadding"
        android:layout_height="@dimen/LargerPadding"
        android:background="@color/actionbar_divider_color" />

    <TextView
        android:id="@+id/action_option_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DefaultActionbarHeightPort"
        android:background="@drawable/actionbar_menu_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/LargePadding"
        android:paddingRight="@dimen/LargePadding"
        android:text="send"
        android:textColor="@color/base_color" />

    <TextView
        android:id="@+id/action_option_style_button"
        style="@style/SolidSmallButtonStyle"
        android:layout_marginLeft="@dimen/SmallPadding"
        android:layout_marginRight="@dimen/SmallPadding"
        android:visibility="gone" />

</LinearLayout>