<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="35.0dip"
    android:paddingRight="35.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60.0dip"
        android:minWidth="@dimen/MinDialogWidth"
        android:background="@drawable/dialog_background"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/dialog_layout_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/LittleDialogPadding"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/dialog_tv_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:soundEffectsEnabled="true"
                    android:text="TextView"
                    android:textSize="@dimen/BigTextSize"
                    android:textColor="@color/base_color"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_layout_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="25.0dip"
                android:paddingLeft="@dimen/LittleDialogPadding"
                android:paddingRight="@dimen/LittleDialogPadding" >

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:fadingEdge="none"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/dialog_tv_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/base_text_middle_color" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_layout_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="1.0px"
            android:visibility="gone" >

            <Button
                android:id="@+id/dilaog_button1"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Button"
                android:visibility="gone" />

            <Button
                android:id="@+id/dilaog_button2"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Button"
                android:visibility="gone" />

            <Button
                android:id="@+id/dilaog_button3"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Button"
                android:visibility="gone"
                android:textColor="@color/base_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>