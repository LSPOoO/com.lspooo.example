<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/LargePadding"
        android:layout_marginLeft="@dimen/LargePadding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间："
            android:textColor="@color/base_text_light_color"
            android:textSize="@dimen/BasicTextSize"/>

        <TextView
            android:id="@+id/startTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-09-01"
            android:textColor="@color/base_text_light_color"
            android:textSize="@dimen/BasicTextSize"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/LittlePadding"
        android:layout_marginLeft="@dimen/LargePadding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间："
            android:textColor="@color/base_text_light_color"
            android:textSize="@dimen/BasicTextSize"/>

        <TextView
            android:id="@+id/endTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-09-28"
            android:textColor="@color/base_text_light_color"
            android:textSize="@dimen/BasicTextSize"/>
    </LinearLayout>


    <TextView
        android:id="@+id/totalCountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/BasicTextSize"
        android:textColor="@color/base_text_light_color"
        android:layout_marginLeft="@dimen/LargePadding"
        android:layout_marginTop="@dimen/LittlePadding"/>

    <TextView
        android:id="@+id/totalWeightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/BasicTextSize"
        android:textColor="@color/base_text_light_color"
        android:layout_marginLeft="@dimen/LargePadding"
        android:layout_marginTop="@dimen/LittlePadding"
        android:layout_marginBottom="@dimen/LargePadding"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>